<view><view class="nl_order-list"><block wx:for="{{orderList}}" wx:for-item="item" wx:for-index="key" wx:key="key"><view class="nl_order-item"><view class="nl_order-time">{{item.order_time}}</view><view class="nl_order-id">{{"订单号: "+item.order_id}}</view><view class="nl_order-title">{{item.title}}</view><block wx:if="{{item.goods_title}}"><view class="nl_order-goods">{{item.goods_title}}</view></block><view class="nl_order-pirce">订单金额:<text class="nl_bold nl_ml-6">{{item.pay_price}}</text></view><view class="nl_order-profit"><block wx:if="{{item.status===1}}"><view><text class="nl_bold-text">预计返利:</text><text class="nl_bold-red nl_ml-6">{{item.per_split_profit}}</text></view></block><block wx:if="{{item.status===2}}"><view><text class="nl_bold-text">返利:</text><text class="nl_bold-red nl_ml-6">{{item.split_profit}}</text><block wx:if="{{is_handle===0}}"><text class="nl_order-waiting-handle nl_ml-6">(待结算)</text></block></view></block><block wx:if="{{item.status===3}}"><view><text class="nl_bold-text">返利:</text><text class="nl_bold-red nl_ml-6">0.00</text></view></block><view class="nl_order-icon"><block wx:if="{{item.platform===1}}"><image class="nl_order-platform-icon" src="../../static/ele.jpeg"></image></block><block wx:else><block wx:if="{{item.platform===2}}"><image class="nl_order-platform-icon" src="../../static/meituan.png"></image></block></block></view><view class="nl_order-status"><block wx:if="{{item.status===1}}"><text class="nl_order-status-ing">已付款</text></block><block wx:if="{{item.status===2}}"><text class="nl_order-status-ok">已完成</text></block><block wx:if="{{item.status===3}}"><text class="nl_order-status-fail">失效订单</text></block></view></view></view></block></view></view>